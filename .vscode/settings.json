{
  "files.exclude": {
    ".eslintcache": true,
    ".nuxt*": true,
    "yarn-error.log": true,
    "pkg/**/.shell": true,
    "pkg/**/node_modules": true
  },
  "eslint.format.enable": true,
  "eslint.run": "onSave",
  "eslint.packageManager": "yarn",
  "eslint.validate": ["vue","html","javascript","typescript"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "cSpell.words": [
    "apiserver",
    "autoscroll",
    "banzaicloud",
    "cacerts",
    "chainable",
    "Codecov",
    "epinio",
    "hevi",
    "Istio",
    "kube",
    "kubeconfig",
    "kubectl",
    "Kubernetes",
    "kubevirt",
    "neuvector",
    "nuxt",
    "overcommit",
    "prefs",
    "prepending",
    "projectsnamespaces",
    "protip",
    "PSPS",
    "pvcs",
    "shortkey",
    "testid",
    "tolerations",
    "userpreferences",
    "virtualmachine",
    "vuex",
    "whatsnew"
  ],
}
