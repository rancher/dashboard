{
  "extends": "./tsconfig.json",
  "include": [
    "tmp/**/*"
  ],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "tmp",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "noEmitOnError": true
  }
}
