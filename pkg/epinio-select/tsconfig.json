{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "preserveSymlinks": true,
    "types": [
      "node",
      "webpack-env"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@shell/core/*": [
        "../../shell/core/*"
      ],
      "@shell/config/*": [
        "../../shell/config/*"
      ],
      "@shell/store/*": [
        "../../shell/store/*"
      ],
      // "@pkg/*": [
      //   "../../pkg/*"
      // ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "../../shell/types/*.d.ts",
    "../../shell/core/*.ts",
    "../../shell/config/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}